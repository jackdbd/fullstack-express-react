{
  "name": "fullstack-express-react",
  "version": "1.0.0",
  "description": "Express API server",
  "main": "server/index.js",
  "author": "jackdbd <jackdebidda@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8.1.4"
  },
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon --exec 'npm run start'",
    "lint": "prettier --write '**/*.{js,jsx}'",
    "crud": "node scripts/crud.js",
    "fake": "node scripts/fake.js",
    "test": "jest --runInBand --forceExit",
    "test1": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "ci": "jest --runInBand --forceExit && cd frontend && yarn add react-scripts && yarn run test",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "verbose": true,
    "collectCoverage": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/frontend/"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "http-status-codes": "^1.3.0",
    "jsonwebtoken": "^8.2.1",
    "mongoose": "^5.1.2",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "passport-http": "^0.3.0",
    "passport-local": "^1.0.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "jest": "23.1.0",
    "mongodb-memory-server": "^1.8.0",
    "mongoose-dummy": "1.0.5",
    "nodemon": "1.17.5",
    "prettier": "1.19.1",
    "supertest": "3.1.0"
  }
}
